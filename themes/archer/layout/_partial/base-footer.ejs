<footer class="footer footer-unloaded">
    <!-- social  -->
    <% if(theme.social) { %>
    <div class="social">
        <%- partial('base-social') %>
    </div>
    <% } %>
     <!-- footer custom text -->
     <p class="footer-text">
     <% if(theme.footer.custom_text) { %>
          <% if(Array.isArray(theme.footer.custom_text)) { %>
              <%- theme.footer.custom_text.join('<br>') %>
          <% } else { %>
              <%- theme.footer.custom_text %>
          <% } %>
      <% } %>
      </p>
    <!-- powered by Hexo  -->
    <div class="copyright">
        <span id="hexo-powerhexo-power">Powered by <a href="https://hexo.io/" target="_blank">Hexo</a></span><span class="iconfont-archer power">&#xe635;</span><span id="theme-info">theme <a href="https://github.com/fi3ework/hexo-theme-archer" target="_blank">Archer</a></span>
    </div>
    <!-- 不蒜子  -->
    <% if (theme.busuanzi) { %>
    <div class="busuanzi-container">
    <% var sloganPieces = theme.busuanzi_slug.split('${count}') %>
    <% if(theme.busuanzi_pv_or_uv === 'pv') { %> 
    <span id="busuanzi_container_site_pv"><%- sloganPieces[0] %><span id="busuanzi_value_site_pv"></span><%- sloganPieces[1] %></span>
    <% } else if (theme.busuanzi_pv_or_uv === 'uv') { %>
    <span id="busuanzi_container_site_uv"><%- sloganPieces[0] %><span id="busuanzi_value_site_uv"></span><%- sloganPieces[1] %></span>
    <% } %>
    </div>
    <% } %>
</footer>